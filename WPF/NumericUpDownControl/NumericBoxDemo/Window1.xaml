<Window x:Class="NumericBoxDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:nb="clr-namespace:NumericUpDownControl;assembly=NumericUpDownControl"
    Title="Numeric Box Demo" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Left" Margin="20">
        <nb:NumericBox Value="{Binding Age,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Minimum="5" Maximum="100" Margin="5"/>        
        <Button Content="Check Updated Value" Click="Button_Click" Height="25" Width="125" Grid.Column="1" Margin="5"></Button>
    </StackPanel>
</Window>
